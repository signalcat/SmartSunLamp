<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="signalcat.github.com.smartsunlamp.MainActivity">

    <Button
        android:id="@+id/button_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_off"
        android:layout_alignBottom="@+id/button_off"
        android:layout_marginLeft="63dp"
        android:layout_marginStart="63dp"
        android:layout_toEndOf="@+id/button_off"
        android:layout_toRightOf="@+id/button_off"
        android:text="On" />

    <Button
        android:id="@+id/button_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="117dp"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:text="Off" />

    <SeekBar
        android:id="@+id/bar_brightness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button_on"
        android:layout_alignLeft="@+id/button_off"
        android:layout_alignRight="@+id/button_on"
        android:layout_alignStart="@+id/button_off"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/tv_brightness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bar_brightness"
        android:layout_alignLeft="@+id/bar_brightness"
        android:layout_alignStart="@+id/bar_brightness"
        android:layout_marginBottom="44dp"
        android:text="brightness" />

    <ImageView
        android:id="@+id/imageView_lightBulb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_brightness"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_toSun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="29dp"
        android:layout_toEndOf="@+id/tv_brightness"
        android:layout_toRightOf="@+id/tv_brightness"
        android:text="toSunTime" />

    <Button
        android:id="@+id/btn_toAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="toSetAlarm"/>

</RelativeLayout>
